<div class="container">
    <div class="utlis">
        <h2 class="top-90 icon"><i class="fa-solid fa-bars"></i></h2>
        <h1 class="text-dark main-heading">
            <% if (user !== undefined) { %>
                Book your flights with ease, <%= user.firstName %>
            <% } else { %>
                Book your flights with ease
            <% } %>
        </h1>
        <div class="search">
            <div class="search-fields">
                <form>
                    <div class="row mt-3 m-auto">
                        <div class="col-md-4 mb-3">
                            <div class="input-group">
                                <span class="input-group-text" id="inputGroup-sizing-default"><i
                                        class="fa-solid fa-location-dot mr-5"></i></span>
                                <input type="text" name="location" class="form-control location" placeholder="Your location"
                                    aria-label="Sizing example input" aria-describedby="inputGroup-sizing-default">
                            </div>
                        </div>
                        <div class="col-md-4 mb-3">
                            <div class="input-group">
                                <span class="input-group-text" id="inputGroup-sizing-default"><i
                                        class="fa-solid fa-map-location"></i></span>
                                <input type="text" name="date" class="form-control destination" placeholder="Destination"
                                    aria-label="Sizing example input" aria-describedby="inputGroup-sizing-default">
                            </div>
                        </div>
                        <div class="col-md-3 mb-3">
                            <div class="input-group">
                                <span class="input-group-text" id="inputGroup-sizing-default"><i
                                        class="fa-solid fa-calendar-days mr-5"></i></span>
                                <input type="date" name="date" class="form-control date" aria-label="Sizing example input"
                                    aria-describedby="inputGroup-sizing-default">
                            </div>
                        </div>
                        <div class="col-md-1 mb-3">
                            <button type="submit" class="btn bg-primary w-100">
                                <i class="fa-solid fa-search"></i>
                            </button>
                        </div>
                    </div>
                </form>
            </div>
        </div>

        <div class="places mt-5">
            <h4 class="sub-heading">Our flight packages</h4>
            <div class="row mt-3 m-auto">
                <% if(typeof places != 'undefined') { %>
                <% places.forEach((place) => { %>
                <div class="col-sm-3 mb-3">
                    <div class="card">
                        <img src="<%= place.image %>" class="card-img-top" alt="...">
                        <div class="card-body">
                            <h5 class="card-title"> <%= place.name %> </h5>
                            <p class="card-text"> <%= place.description.slice(0, 65) + "..." %> %> </p>
                            <span class="fs-6 text-success">$ <%= place.price %> | <%= place.category.name %> </span>
                            <a href="#" class="btn bg-primary w-100 mt-3">Travel</a>
                        </div>
                    </div>
                </div>
                <% }); %>
                <% } %>
            </div>
        </div>
        </div>
    </div>
</div>