<div class="container">
    <div class="top-100">
        <!-- Button trigger modal -->
        <nav style="--bs-breadcrumb-divider: '>';" aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="/dashboard">Dashboard</a></li>
                <li class="breadcrumb-item active" aria-current="page">Category</li>
            </ol>
        </nav>
        <div class="row">
            <div class="col-lg-11">
                <h2 class="top-90 icon"><i class="fa-solid fa-bars"></i></h2>
                <h1>Category</h1>
            </div>
            <div class="col-lg-1">
                <button type="button" class="btn bg-primary" data-bs-toggle="modal" data-bs-target="#staticBackdrop">
                    <i class="fa-solid fa-plus fa-beat"></i>
                </button>
            </div>
        </div>

        <div class="center">
            <%- include('../partials/message'); %>
        </div>

        <!-- Modal -->
        <div class="modal fade" id="staticBackdrop" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1"
            aria-labelledby="staticBackdropLabel" aria-hidden="true">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <h1 class="modal-title fs-5" id="staticBackdropLabel">Create</h1>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="modal-body">
                        <div class="">
                            <div class="card card-body pt-5">
                                <form action="/dashboard/category" method="POST">
                                    <div class="form-group mb-3">
                                        <input type="text" id="name" name="name" class="form-control"
                                            placeholder="Name of place"
                                            value="<%= typeof name != 'undefined' ? name : '' %>" />
                                    </div>
                                    <button type="submit" class="btn btn-success w-100">Save</button>
                                </form>
                            </div>
                            <div class="modal-footer">
                                <button type="button" class="btn btn-danger" data-bs-dismiss="modal">Close</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="card">
            <div class="card-header">
                Datatable
            </div>
            <div class="card-body">
                <h5 class="card-title">Datatable with every category data</h5>
                <table id="example1" class="display table-striped table-hover table-bordered table">
                    <thead>
                        <tr>
                            <th scope="col">Name</th>
                            <th scope="col">Date</th>
                            <th scope="col"></th>
                            <th scope="col"></th>
                        </tr>
                    </thead>
                    <tbody class="table-group-divider">
                        <% if(typeof cateories != 'undefined') { %>
                        <% cateories.forEach((category) => { %>
                        <tr>
                            <td> <%= category.name %> </td>
                            <td> <%= category.date.toString('MMM dd, YYYY').slice(0, 10); %> </td>
                            <td class="text-center"> <i class="fa-solid fa-pen-to-square fa-beat"></i> </td>
                            <td class="text-center"><a href="/dashboard/category/<%= category.id %>"> <i
                                        class="fa-solid fa-trash trash fa-bounce"></i> </a> </td>
                        </tr>
                        <% }); %>
                        <% } %>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>