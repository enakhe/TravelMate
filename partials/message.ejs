<% if(typeof errors != 'undefined') { %>
<% errors.forEach((error) => { %>
<div class="alert alert-danger alert-dismissible fade show" role="alert">
    <strong><i class="fas fa-triangle-exclamation"></i> <%= error.msg %></strong>
    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
</div>
<% }); %>
<% } %>

<% if (success_msg != '') { %>
<div class="alert alert-success alert-dismissible fade show" role="alert">
    <strong><i class="fas fa-triangle-exclamation"></i> <%= success_msg %></strong>
    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
</div>
<% } %>

<% if (error_msg != '') { %>
<div class="alert alert-danger alert-dismissible fade show" role="alert">
    <strong><i class="fas fa-triangle-exclamation"></i> <%= error_msg %></strong>
    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
</div>
<% } %>

<% if (warning_msg != '') { %>
<div class="alert alert-warning alert-dismissible fade show" role="alert">
    <strong><i class="fas fa-triangle-exclamation"></i> <%= warning_msg %></strong>
    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
</div>
<% } %>

<% if (error != '') { %>
<div class="alert alert-danger alert-dismissible fade show" role="alert">
    <strong><i class="fas fa-triangle-exclamation"></i> <%= error %></strong>
    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
</div>
<% } %>